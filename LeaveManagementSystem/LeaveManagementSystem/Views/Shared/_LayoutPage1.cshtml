@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")
    @Scripts.Render("~/Scripts/bootstrap")
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm text-light navbar-light">
            <a class="navbar-brand" href="#">Leave Management System</a>



            <div class="collapse navbar-collapse" id="collapsibleNavBar">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/contact">Contact</a>
                    </li>

                    @if (Session["CurrentUserName"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/login">Login</a>
                        </li>

                    }

                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/home/categories">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/allquestions">Employees</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">

                                @Session["CurrentUserName"]
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/account/logout">Logout</a>
                                <a class="dropdown-item" href="/account/changeprofile">Change Profile</a>
                                <a class="dropdown-item" href="/account/changepassword">Change Password</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            @if (Session["CurrentUserName"] != null)
            {

                <form class="form-inline" action="/account/logout">

                    <button class="btn btn-success">Logout</button>
                </form>
            }
            </nav>

        @RenderBody()
        @if (Session["CurrentUserName"] != null)
        {
    <table>
        <tr>
            <td></td>
            <td>
                <form class="form-inline" action="/account/addleave">

                    <button class="btn btn-success">Apply Leave</button>
                </form>
            </td>
            <td></td>
            <td>
                <form class="form-inline" action="/account/changeprofile">

                    <button class="btn btn-success">Change Profile</button>
                </form>
            </td>
            <td></td>
            <td>
                <form class="form-inline" action="/account/changepassword">

                    <button class="btn btn-success">Change Password</button>
                </form>
            </td>
        </tr>
    </table>
            
        }
        </div>
        
</body>
</html>
