@{
    ViewBag.Title = "Delete Employee";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Delete Employee</h1>
        <form novalidate="novalidate" action="/account/DeleteEmployee" method="post" class="needs-validation" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtempid">EmployeeID</label>
                    <input type="text" class="form-control" id="txtempid" placeholder="Enter EmployeeId" name="id" required="required" autofocus="autofocus" />

                </div>
            </div>
           
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    </div>
</div>

<script>

    $("a[href='/account/deleteemployee']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event)
    {
        if ($(".needs-validation")[0].checkValidity() == false || $(".email-exist").text() != "")
        {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }


</script>