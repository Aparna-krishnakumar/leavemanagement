@model LeaveManagementSystem.ViewModels.EditEmployeeDetailsViewModel

@{
    ViewBag.Title = "Change Profile";
}
<div class="jumbotron"><h1>Change Profile</h1></div>
<div class="justify-content-center row">
    <div class="col-sm-6">
        <form novalidate="novalidate" action="/account/changeprofile" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtName">Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Enter name" name="Name" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.Name" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtEmail">Email</label>
                    @Html.HiddenFor(temp => temp.Email)
                    <span>@Model.Email</span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtAddress">Address</label>
                    <input type="text" class="form-control" id="txtAddress" placeholder="Address" name="Address" required="required" minlength="30" />

                </div>


                <div class="form-group col-sm-6">
                    <label for="txtMobile">Mobile</label>
                    <input type="text" class="form-control" id="txtMobile" placeholder="Mobile" name="Mobile" required="required" pattern="^[789]\d{9}$" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    @{
                        Html.RenderPartial("PhotoPartialView");
                    }
                </div>
            </div>

            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Update </button>
            @if ((string)Session["CuurentUserDesignation"] == "Admin")
            {
                <a class="btn btn-danger float-right" href="~/admin/index">Cancel</a>
            }
            else if ((string)Session["CuurentUserDesignation"] == "HR")
            {
                <a class="btn btn-danger float-right" href="~/HR/index">Cancel</a>
            }
            else if ((string)Session["CuurentUserDesignation"] == "Project Manager")
            {
                <a class="btn btn-danger float-right" href="~/ProjectManager/index">Cancel</a>
            }
            else
            {
                <a class="btn btn-danger float-right" href="~/Employee/Index">Cancel</a>
            }

        </form>
    </div>
</div>

<script>

    $("a[href='/account/changeprofile']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>


