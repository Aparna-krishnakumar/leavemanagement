@model List<LeaveManagementSystem.ViewModels.LeaveDataAdminViewModel>

@{
    ViewBag.Title = "Leave Data";
}

<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron"><h4>Leave Applications</h4></div>
        
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Reason of absence</th>
                    <th>Status</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
        <tr>
            <td>@item.EmployeeName</td>
            <td>@item.StartDate.ToShortDateString()</td>
            <td>@item.EndDate.ToShortDateString()</td>
            <td>@item.ReasonOfAbsence</td>
            <td>
                @if (@item.Approved == true)
                {
                    <span>Approved</span>
                }
                else if (item.Rejected == true)
                {
                    <span>Rejected</span>
                }
                else
                {
                    <a class="btn btn-success" href="/leave/leaveapproveadmin/@item.LeaveID">
                        Approve
                    </a>
                    <a class="btn btn-success" href="/leave/leaverejectadmin/@item.LeaveID">
                        Reject
                    </a>
                }


            </td>
            @if (@item.Approved == true || item.Rejected == true)
            {
                <td>
                    <a class="btn btn-outline-danger" href="/leave/leaveremoveadmin/@item.LeaveID">
                        Remove
                    </a>
                </td>
            }
            </tr>

            }
        </table>
    </div>
</div>

<script>
    $("a[href='/leave/leavelistadmiin']").attr("id", "active");
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false || $(".email-exist").text() != "") {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>

