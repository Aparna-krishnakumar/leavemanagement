@{
    ViewBag.Title = "Apply Leave";
}

<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron"><h1>Apply Leave</h1></div>
        
        <form novalidate="novalidate" action="/leave/AddLeave" method="post" class="needs-validation" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtStartDate">Start Date</label>
                    <input type="date" class="form-control" id="txtStartDate" placeholder="Enter Start Date" name="StartDate" required="required" autofocus="autofocus" />

                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtEndDate">End Date</label>
                    <input type="date" class="form-control" id="txtEndDate" placeholder="Enter End Date" name="EndDate" required="required" />

                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtReason">Reason Of Absence</label>
                    <input type="text" class="form-control" id="txtReason" placeholder="Reason Of Absence" name="ReasonOfAbsence" required="required" />

                </div>


            </div>



            <button type="submit" class="btn btn-primary">Apply</button>
        </form>
    </div>
</div>

<script>

    $("a[href='/leave/addleave']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event)
    {
        if ($(".needs-validation")[0].checkValidity() == false || $(".email-exist").text() != "")
        {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }


</script>