@model LeaveManagementSystem.ViewModels.EditEmployeeDetailsViewModel

@{
    ViewBag.Title = "Update Employee Data";
}
<div class="jumbotron">
    <h1>Change Profile</h1>
</div>
<div class="justify-content-center row">
    <div class="col-sm-6">
        
        
        <form novalidate="novalidate" action="/account/changeprofile" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtName">Name</label>
                    <input type="text" class="form-control" id="txtName" value="@Model.Name" name="Name" disabled="disabled" />

                </div>


                <div class="form-group col-sm-6">
                    <label for="txtEmail">Email</label>
                    <input type="email" class="form-control" id="txtEmail" value="@Model.Email" name="Email" disabled="disabled" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtDesignation">Designation</label>
                    <input type="text" class="form-control" id="txtDesignation" placeholder="Enter Designation" name="Designation" required="required" />

                </div>
            </div>


            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-danger float-right" href="~/admin/EmployeeList">Cancel</a>
        </form>
    </div>
</div>

<script>

    $("a[href='/account/changeprofile']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event)
    {
        if ($(".needs-validation")[0].checkValidity() == false)
        {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>


