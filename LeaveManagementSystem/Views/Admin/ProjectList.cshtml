@model List<LeaveManagementSystem.ViewModels.ProjectViewModel>

@{
    ViewBag.Title = "Project Data";
}

<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h4>Project List</h4>
        </div>
        
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>Project ID</th>
                    <th>Project Name</th>
                    <th>Project Manager</th>
                    <th>Update</th>
                    <th>Remove from list</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
        <tr>
            <td>@item.ProjectID</td>
            <td>@item.ProjectName</td>
            <td>@item.ProjectManager</td>
            <td>
                <a class="btn btn-success" href="/project/updateproject/@item.ProjectID">
                    Update
                </a>
            </td>
            <td>
                <a class="btn btn-danger" href="/project/projectremove/@item.ProjectID">
                    Remove
                </a>
            </td>
        </tr>
                
            }
        </table>
        <a class="btn btn-primary" href="/project/addproject">
            Add Project
        </a>
    </div>
</div>

<script>
    $("a[href='/account/employeelist']").attr("id", "active");
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false || $(".email-exist").text() != "") {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>

